<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.volen.ratingraquest.samples">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity"
            android:theme="@style/AppThemeNoTitleBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".BasicExampleActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/basic_example_name"/>

        <activity android:name=".CustomShowHideAnimationExample"
            android:parentActivityName=".MainActivity"
            android:label="@string/custom_show_hide_animation_example_name"/>

        <activity android:name=".CustomStateSwitchAnimationExampleActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/custom_state_switch_animation_example_name"/>

        <activity android:name=".AdvancedStylingExampleActivity"
            android:parentActivityName=".MainActivity"
            android:label="@string/advanced_styling_example_name"/>

        <activity android:name=".RecyclerViewExampleActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppThemeNoTitleBar.TransparentStatusBar"
            android:label="@null"/>

    </application>

</manifest>
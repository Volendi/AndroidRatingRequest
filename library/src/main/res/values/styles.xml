<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RateDialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RateDialog.Handler">
        <item name="android:background">@color/default_background</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="RateDialog.Text">
        <item name="android:textColor">@color/default_text</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">@dimen/text_margin</item>
    </style>

    <style name="RateDialog.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">@dimen/button_padding</item>
        <item name="android:paddingBottom">@dimen/button_padding</item>
        <item name="android:layout_marginLeft">@dimen/button_margin</item>
        <item name="android:layout_marginRight">@dimen/button_margin</item>
        <item name="android:layout_marginBottom">@dimen/button_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/default_buttons</item>
        <item name="android:background">@drawable/rate_dialog_button_decline</item>
    </style>

    <style name="RateDialog.Button.Accept">
        <item name="android:textColor">@color/default_background</item>
        <item name="android:background">@drawable/rate_dialog_button_accept</item>
    </style>

</resources>